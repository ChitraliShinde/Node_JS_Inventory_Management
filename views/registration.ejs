<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Registration</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>
<body>

<% if(messages.success){%>
    <div class="alert alerts alert-success alert-dismissible pull-right" role="alert">
        <span><%= messages.success%></span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% }%>

<% if(messages.error){%>
    <div class="alert alerts alert-success alert-dismissible pull-right" role="alert">
        <span><%= messages.error%></span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% }%>

<div class="container">
<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
    <h1>Registration</h1>

    <form action="/register" method="post" id="registerForm">
        <div class="row">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" placeholder="Username" title="Please Enter Your Username" value="" autocomplete="off" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="username">Email Address</label>
                <input type="email" name="email" id="email" placeholder="Username" title="Please Enter Your Email ID" value="" autocomplete="off" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" title="Please Enter Your Password" placeholder="******" value="" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Confirm Password</label>
                <input type="password" name="confirm_password" id="confirm_password" title="Please Enter Your Password Again" placeholder="******" value="" class="form-control" required>
            </div>
            <script>
                var password = document.getElementById("password")
                    , confirm_password = document.getElementById("confirm_password");

                function validatePassword(){
                    if(password.value != confirm_password.value) {
                        confirm_password.setCustomValidity("Passwords Not Match");
                    } else {
                        confirm_password.setCustomValidity('');
                    }
                }

                password.onchange = validatePassword;
                confirm_password.onkeyup = validatePassword;
            </script>

            <input type="checkbox" value="" required>
            <label for="check" style="color: #ff7117"><span></span>I Agree To The Terms</label>

            <button type="submit" class="btn btn-success btn-block">Register</button>
            <button type="reset" class="btn btn-success btn-block">Reset</button>

            <br>
            <label for="">Already Have an Account?</label>
            <br>

            <a href="/login" class="btn btn-success btn-block">Login Here</a>

        </div>

    </form>

</div>
</div>

</body>
</html>
