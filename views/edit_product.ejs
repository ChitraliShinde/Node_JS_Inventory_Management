<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Edit Product</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>
<body>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Inventory Management</a>
        </div>
        <ul class="nav navbar-nav">
            <li><a href="/logout">Logout</a></li>
        </ul>
    </div>
</nav>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <%try{%>

        <form action="updateproduct/<%= data[0].id%>" method="post" enctype="multipart/form-data" id="addproduct">
            <fieldset>
                <div class="form-group">
                    <label for="productTitle">Product Title:</label>
                    <input type="hidden" class="form-control" id="id" name="id" <% if(data.length){%> value="<%= data[0].id%>" <%}%>>
                    <input type="text" class="form-control" id="title" name="title" required <%if(data.length) {%>value="<%= data[0].title%>" <%}%> >
                </div>
                <div class="form-group">
                    <label for="productDescription">Product Description:</label>
                    <textarea class="form-control" id="description" name="description"  required><%if(data.length) {%><%= data[0].description%><%}%></textarea>
                </div>

                <div class="form-group">
                    <label for="productQuantity">Product Quantity:</label>
                    <input type="number" class="form-control" id="productQuantity" name="productQuantity" required<%if(data.length) {%><%= data[0].quantity%><%}%>>
                </div>

            </fieldset>
            <br>
            <button type="submit" class="btn btn-success loginbtn">Submit</button>
            <button type="reset" class="btn btn-success loginbtn">Reset</button>

        </form>

    <%}catch (ex){}%>
</div>


</body>
</html>